    }
    button {
      margin-top: 16px;
      padding: 10px 16px;
      font-size: 16px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      background: #1976d2;
      color: white;
      width: 100%;
    }
    button:hover {
      background: #0d47a1;
    }
    .result {
      margin-top: 20px;
      padding: 12px;
      border-radius: 6px;
      background: #e3f2fd;
      text-align: left;
    }
    .error {
      margin-top: 10px;
      padding: 10px;
      border-radius: 6px;
      background: #ffebee;
      color: #c62828;
    }
    small {
      font-size: 12px;
      color: #555;
    }
  </style>
