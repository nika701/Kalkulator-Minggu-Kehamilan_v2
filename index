    }
    h1 {
      font-size: 22px;
      text-align: center;
      margin-bottom: 20px;
    }

    /* IMEJ ATAS & BAWAH */
    .header-image {
      width: var(--header-img-width);
      max-width: 100%;
      margin: 10px auto 16px auto;
      display: block;
    }
    .footer-image {
      width: var(--footer-img-width);
      max-width: 100%;
      margin: 16px auto 6px auto;
      display: block;
    }

    label {
      display: block;
      margin-top: 12px;
      font-weight: bold;
      text-align: left;
    }
    input[type="date"],
    input[type="number"] {
      width: 100%;
